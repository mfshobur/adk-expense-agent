# LLM Configuration
LLM_PROVIDER=gemini                    # gemini | openai | anthropic
LLM_MODEL=gemini-2.5-flash            # Model name for the chosen provider
GOOGLE_API_KEY=your_google_api_key     # Required for Gemini provider
GOOGLE_GENAI_USE_VERTEXAI=FALSE
OPENAI_API_KEY=your_openai_key         # Required only for OpenAI provider
ANTHROPIC_API_KEY=your_anthropic_key   # Required only for Anthropic provider

# Google Sheets
SHEET_ID=your_google_sheet_id
SHEET_NAME=Transactions
SERVICE_ACCOUNT_JSON=                  # Base64-encoded service account JSON (production)

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_USER_ID=your_telegram_user_id
TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret
ALLOWED_TELEGRAM_USER_IDS=comma_separated_user_ids

# Agent Instruction (personality & behavior)
AGENT_INSTRUCTION="Your agent personality and rules here"

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Gmail Pub/Sub (optional â€” for email monitoring)
GMAIL_TOKEN_JSON=                      # Base64-encoded Gmail OAuth token
PUBSUB_AUTH_TOKEN=your_pubsub_token

# Server
PORT=8080
